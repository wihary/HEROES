@using AlmaIt.dotnet.Heroes.Shared.Models
@inherits EditSerieBase

<div class="alert alert-secondary" role="alert">
    <h3>Edit Comics serie details</h3>
    <div class="form-row">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="Title">Title</span>
                </div>
                <input type="text" class="form-control" aria-describedby="Title" bind="@(this.SelectedSerie.Name)" />
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-auto">
            <button class="btn btn-default" onclick="@(async () => await this.EditionCompleted(false))">Cancel</button>
            <button class="btn btn-default" onclick="@(async () => await this.UpdateComicSerie())">Save</button>
        </div>
    </div>
</div>

@functions {

}