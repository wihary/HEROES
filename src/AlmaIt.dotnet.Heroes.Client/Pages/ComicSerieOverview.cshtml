@inherits AlmaIt.Dotnet.Heroes.Client.ViewModel.Page.ComicSerieOverviewBase

@page "/overview/serie/{ComicSerieId}"

<h1>Comic book Serie Overview</h1>
<!-- clip-path: polygon(0 0,0 100%,100% 80%,100% 0); -->
<div class="row mb-3" style="height: 16rem; background-color: #e2e2e2;">
    <div class="col-md-2 border mt-3">
        <img src="https://i.annihil.us/u/prod/marvel/i/mg/1/d0/5aa06c1aeb7ff/standard_incredible.jpg" class="card-img-top border" alt="..." style="width: 100%; height: auto;">
    </div>
    <div class="col-md-6 mt-3">
        <div class="row mb-3">
            <span>TITLE</span>
        </div>
        <div class="row">
            <span>Description</span>
        </div>
    </div>
    <div class="col-md-2 offset-md-2 align-self-end">
        <div class="row mr-1" style="float: right;">
            <span>Add Comic Book</span>
        </div>
    </div>
</div>
<div class="row" >
    @for (int i = 0; i < 13; i++)
    {
        <!-- https://i.annihil.us/u/prod/marvel/i/mg/5/60/5afc7fed6a4da/clean.jpg -->
        <div class="col-md-3 pb-5">
            <img src="/images/NoImage.png" class="card-img-top border" alt="..." style="width: 100%; height: auto;">
            <h5 class="card-title">Comic title</h5>
            <p class="card-text">Parution Date + author</p>
        </div>
    }
</div>